<Window x:Class="Sigil.Views.CookieDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sigil â€“ Cookie Debug"
        Height="520" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Cookie extraction debug log"
                   Foreground="#a0a0a0"
                   FontSize="12"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1"
                Background="#16213e"
                BorderBrush="#2a2a4a"
                BorderThickness="1"
                CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="10">
                <TextBox x:Name="LogBox"
                         IsReadOnly="True"
                         Background="Transparent"
                         Foreground="#e0e0e0"
                         FontFamily="Consolas"
                         FontSize="12"
                         BorderThickness="0"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Copy to Clipboard" Width="140" Height="34"
                    Background="#16213e" Foreground="White" BorderBrush="#2a2a4a"
                    Cursor="Hand" Click="OnCopy" Margin="0,0,10,0"/>
            <Button Content="Close" Width="80" Height="34"
                    Background="#e94560" Foreground="White" BorderBrush="#e94560"
                    Cursor="Hand" Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
