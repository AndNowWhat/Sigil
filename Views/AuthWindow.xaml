<Window x:Class="Sigil.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Sigil Login"
        Height="720"
        Width="480"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="StatusText" Text="Starting login..." VerticalAlignment="Center"/>
            <Button DockPanel.Dock="Right" Width="90" Content="Cancel" Click="OnCancel"/>
        </DockPanel>

        <wv2:WebView2 x:Name="Browser" Grid.Row="1"/>
    </Grid>
</Window>
